{% extends "layout.njk" %}


{% block content %}
  <div class="card">
     <section 
    class="avatar"
    style="background: url({{student.avatar}}) no-repeat center center / cover;"
    >
  </section>
    <section class="details">

      <h3>Detalhes</h3>

       <div class="item">
         <div>Nome completo</div>
          <div>
           {{student.name}}
          </div>
       </div>

       <div class="item">
         <div>Data de nascimento </div>
          <div>
            {{student.birth}}
          </div>
       </div>

       <div class="item">
         <div>E-mail</div>
          <div>
            {{student.email}}
          </div>
       </div>

        <div class="item">
         <div>Grau de Escolaridade</div>
          <div>
          {{student.degree}}
          </div>
       </div>

        <div class="item">
         <div>Carga hor√°ria</div>
          <div>{{student.hour}} horas</div>
       </div>

      <a href="/students/{{student.id}}/edit" class="button">Editar</a>

    </section>
  </div>
{%endblock%}