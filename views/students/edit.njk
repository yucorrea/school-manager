{% extends "layout.njk" %}

{% block content %}
  <div class="card">
      <section class="avatar" style="background: url({{student.avatar}}) no-repeat center center / cover;"></section>
    <form method="POST" action="/students?_method=PUT">

      <section class="details">

        <h3>EDITAR ALUNO</h3>
        
        {% include "students/fields.njk" %}
        
        <input type="text" name="id" value="{{student.id}}" hidden>
    </form>

    <form method="POST" action="/students?_method=DELETE" id="form-delete">
          <input type="text" name="id" value="{{student.id}}" hidden="hidden">
          <button type="submit" class="button-delete">Deletar</button>
    </form>
</section>

  </div>

  {% include "../delete.njk" %}
  {%endblock%}