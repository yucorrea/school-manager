        <div class="item">
         <div>Avatar URL</div>
          <div>
            <input 
            type="text"
            name="avatar"
            placeholder="http://"
            value="{{teacher.avatar}}"
            >
          </div>
       </div>

      <input type="text" name="id"value="{{teacher.id}}" hidden>
       <div class="item">
         <div>Nome completo</div>
          <div>
            <input 
            type="text"
            name="name"
            placeholder="Nome do professor"
             value="{{teacher.name}}"
            >
          </div>
       </div>

       <div class="item">
         <div>Data de nascimento </div>
          <div>
             <input 
            type="date"
            name="birth"
            value="{{teacher.birth}}"
            >
          </div>
       </div>

        <div class="item">
         <div>Grau de Escolaridade</div>
          <div>
           <select name="degree" >
             <option value="">Escolha uma opção</option>
             <option 
             value="Ensino Medio Completo" 
             {% if teacher.degree == "Medio" %}
             selected
             {%endif%}
             >Ensino Médio Completo</option>
             <option 
             value="Ensino Superior Completo"
             {% if teacher.degree == "Superior" %}
             selected
             {%endif%}
             >Ensino Superior Completo</option>
             <option
              value="Mestrado"
             {% if teacher.degree == "Mestrado" %}
             selected
             {%endif%}
             >Mestrado</option>
             <option 
             value="Doutorado"
              {% if teacher.degree == "Doutorado" %}
             selected
             {%endif%}
             >Doutorado</option>
           </select>
          </div>
       </div>

       <div class="item">
         <div>Tipo de Aula </div>
          <div>
            <span>
              <input 
              type="radio" 
              name="type" 
              value="Presencial"
              {% if teacher.type == "Presencial" %}
              checked
              {% endif%}
              >Presencial
            </span>
             <span>
              <input 
              type="radio" 
              name="type" 
              value="À distância"
               {% if teacher.type == "À distância" %}
              checked
              {% endif%}
              >À distância
            </span>
          </div>
       </div>

        <div class="item">
         <div>Área de atuação </div>
          <div> 
            <input 
            type="text"
            name="services"
            placeholder="Separe sua área de atuação por vírgula"
             value="{{teacher.services}}"
            >
          </div>
       </div>
 
    <button type="submit">Salvar</button>