{% extends "layout.njk" %}


{% block content %}
  <div class="card">
     <section 
    class="avatar"
    style="background: url({{teacher.avatar}}) no-repeat center center / cover;"
    >
  </section>
    <section class="details">

      <h3>Detalhes</h3>

       <div class="item">
         <div>Nome completo</div>
          <div>
           {{teacher.name}}
          </div>
       </div>

       <div class="item">
         <div>Data de nascimento </div>
          <div>
            {{teacher.age}}
          </div>
       </div>

        <div class="item">
         <div>Grau de Escolaridade</div>
          <div>
          {{teacher.degree}}
          </div>
       </div>

       <div class="item">
         <div>Tipo de Aula </div>
          <div>{{teacher.type}}</div>
       </div>

        <div class="item">
         <div>Área de atuação </div>
          <div> 
            {% for service in teacher.services%}
              <span>{{service}} </span>
            {% endfor %}
          </div>
       </div>

         <div class="item">
         <div>Desde</div>
          <div> 
          {{teacher.created_at}}
          </div>
       </div>
      <a href="/teachers/{{teacher.id}}/edit" class="button">Editar</a>

      <form action="/teachers?_method=DELETE" method="post">
          <input type="hidden" name="id" value="{{teacher.id}}">
          <button type="submit" class="btnDelete">Deletar </button>
      </form>
     
    </section>
  </div>
{%endblock%}